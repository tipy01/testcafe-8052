{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "TestCafe Chrome launch test file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
            "args": [
                "chrome --ignore-certificate-errors",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TestCafe Firefox launch test file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
            "args": [
                "firefox:userProfile",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TestCafe Edge launch test file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
            "args": [
                "edge --ignore-certificate-errors",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TestCafe Chromium launch test file",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
            "args": [
                "chromium --ignore-certificate-errors",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}